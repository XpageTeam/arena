<!DOCTYPE html>
html(lang="ru")
	head
		meta(charset="utf-8")
		title Подтверждение бронирования
		include inc/head.pug
		include inc/css.pug
	body.inner.loading
		include inc/header.pug
		include mixins/title-block.pug
		+titleBLock(["", "Подтверждение бронирования"])

		main#content
			.booking-conf-cont
				.wrapper
					.booking-confirmation
						.bc-list
							.bc-item
								.bc-item__el Площадка
								.bc-item__el Футбол, поле 1
							.bc-item
								.bc-item__el Дата
								.bc-item__el 12 сентября
							.bc-item
								.bc-item__el Промежуток времени
								.bc-item__el 11:00 - 11:30
						.bc-list
							.bc-item
								.bc-item__el 
									.checkbox
										input(type="checkbox" id="1").checkbox__input
										label(for="1").checkbox__label Аренда мяча

								.bc-item__el 100 руб.
							.bc-item
								.bc-item__el 
									.checkbox
										input(type="checkbox" id="2").checkbox__input
										label(for="2").checkbox__label Аренда манишек

								.bc-item__el 300 руб.
						.bc-total
							.bc-item
								.bc-item__el Итоговая стоимость
								.bc-item__el 2200 руб.
	
						.bc-form
							form(action="#")
								.form__inputs
									.form__inputs.form__inputs--4
										.form__inputs-input
											.default-input
												input.default-input__input(type="text" placeholder="" value="")
												label.default-input__label Имя
												.default-input__error
													.error-text
														<!-- текст ошибки -->
										.form__inputs-input
											.default-input
												input.default-input__input(type="tel" inputmode="tel" pattern='\\+7\\s\\([0-9]{3}\\)\\s[0-9]{3}-[0-9]{2}-[0-9]{2}' placeholder="")
												label.default-input__label Телефон
												.default-input__error
													.error-text
														<!-- текст ошибки -->
										.form__inputs-input
											.default-input
												input.default-input__input(type="email" pattern="[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{1,63}$" inputmode="email" placeholder="")
												label.default-input__label E-mail
												.default-input__error
													.error-text
														<!-- текст ошибки -->
										
										
										.form__submit
											.form__submit-btn
												input.btn(type="submit" value="Отправить")
											.form__submit-text Нажимая кнопку, Вы даете информированное согласие на 
												a(href="#") обработку своих персональных данных
								




				
		include inc/footer-inner.pug
		include inc/scripts.pug 